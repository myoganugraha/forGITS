<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewDatRendah"
    android:padding="16dp"
    android:orientation="vertical"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    style="@style/CardView"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <ImageView
            android:id="@+id/thumbnailDatRendah"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="fitStart"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/dataran_tinggi"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/titleDatRendah"
            android:layout_below="@id/thumbnailDatRendah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is Just Dummy Text"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingBottom="10dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>